# Set CLICOLOR if you want Ansi Colors in iTerm2
export CLICOLOR=1
 
# Set colors to match iTerm2 Terminal Colors
export TERM=xterm-256color
 
# Display current working directory on shell
PS1='\w\$ '

# Reuse previous session's shell
Preferences → Profiles → General → "Working Directory" = "Reuse previous session's"

# Use linux style text navigation, i.e. alt + left = move 1 word to the left.
Preferences → Profiles → Keys     ( NOT Preferences → Keys )
Choose "Natural Text Editing"  
